{
  "name": "ignis",
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist",
    "start": "bun run src/index.ts",
    "build:frontend": "cd frontend && bun run build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:legacy": "bun run scripts/test-routes.ts",
    "test:agent": "bun run scripts/test-agent-simulation.ts",
    "test:agent:all": "bun run scripts/test-agent-simulation.ts --all",
    "test:backend": "bun run scripts/test-backend-integration.ts",
    "test:voice": "bun run scripts/test-agent-voice.ts",
    "elevenlabs:export": "bun run elevenlabs/export-agent.ts",
    "elevenlabs:import": "bun run elevenlabs/import-agent.ts",
    "elevenlabs:import:dry": "bun run elevenlabs/import-agent.ts --dry-run"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@types/node": "^25.1.0",
    "axios": "^1.13.4",
    "date-fns": "^4.1.0",
    "hono": "^4.11.7",
    "twilio": "^5.3.7",
    "ws": "^8.19.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/ws": "^8.18.1"
  }
}
